@model MovieTheaterTicketBookingSystem.Models.Booking

<h1>Create Booking</h1>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="CustomerName">Customer Name</label>
        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="SeatsBooked">Seats Booked</label>
        @Html.TextBoxFor(m => m.SeatsBooked, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="NumberOfTickets">Number of Tickets</label>
        @Html.TextBoxFor(m => m.NumberOfTickets, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="TotalPrice">Total Price</label>
        @Html.TextBoxFor(m => m.TotalPrice, new { @class = "form-control" })
    </div>
    <input type="hidden" name="ShowtimeID" value="@ViewBag.ShowtimeID" />
    <input type="hidden" name="MovieID" value="@ViewBag.MovieID" />
    <button type="submit" class="btn btn-primary">Book Tickets</button>
}
