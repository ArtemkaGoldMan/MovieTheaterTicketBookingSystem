@model MovieTheaterTicketBookingSystem.Models.Showtime

<h1>Add Showtime</h1>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="MovieID">Select Movie</label>
        <select id="MovieID" name="MovieID" class="form-control">
            @foreach (var movie in (IEnumerable<MovieTheaterTicketBookingSystem.Models.Movie>)ViewBag.Movies)
            {
                <option value="@movie.ID">@movie.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="DateTime">DateTime</label>
        @Html.TextBoxFor(m => m.DateTime, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="TheaterHall">Theater Hall</label>
        @Html.TextBoxFor(m => m.TheaterHall, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="AvailableSeats">Available Seats</label>
        @Html.TextBoxFor(m => m.AvailableSeats, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Add Showtime</button>
}
