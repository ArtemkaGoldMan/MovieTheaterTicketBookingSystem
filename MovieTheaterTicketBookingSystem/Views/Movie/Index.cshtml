@model IEnumerable<MovieTheaterTicketBookingSystem.Models.Movie>

@{
    ViewData["Title"] = "Movie";
}

<h1>Movies</h1>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Duration</th>
            <th>Description</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre</td>
                <td>@movie.Duration mins</td>
                <td>@movie.Description</td>
                <td><img src="@movie.PictureURL" alt="@movie.Title" style="width:100px;"></td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = movie.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = movie.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create", "Movie")" class="btn btn-primary">Add Movie</a>
